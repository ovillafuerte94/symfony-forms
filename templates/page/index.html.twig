{% extends 'base.html.twig' %}

{% block title %}Home!{% endblock %}

{% block body %}
    <div class="row align-items-center">
        <div class="col-md-8">
            <h1>Home Page! âœ…</h1>
        </div>
        <div class="col-md-4">
            <a href="{{ path('post_create') }}" class="btn btn-dark btn-sm float-end">Add post</a>
        </div>
    </div>
    <table class="table table-striped">
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.title }}</td>
                <td>
                    <a href="{{ path('post_edit', { id: post.id }) }}">
                        Edit
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}